<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CareOnDemand.Views.CustomerViews.OrderDetails"
             NavigationPage.HasNavigationBar="True"
             Title="Selected Service(s)">
    
    <ContentPage.Resources>
        <StyleSheet Source="/Views/StyleSheet.css" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <ContentView>
            <ScrollView>
                <Grid Padding="15" StyleClass="main">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.10*" />
                        <RowDefinition Height="0.08*" />
                        <RowDefinition Height="0.05*" />
                        <RowDefinition Height="0.07*" />
                        <RowDefinition Height="0.05*" />
                        <RowDefinition Height="0.07*" />
                        <RowDefinition Height="0.08*" />
                        <RowDefinition Height="0.08*" />
                        <RowDefinition Height="0.08*" />
                        <RowDefinition Height="0.08*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <!--<Label StyleClass="primaryLabel" Text="PLACEHOLDER" Grid.Row="0" FontSize="Large" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />-->

                    <!--<Label Text="Selected Service(s)"  Grid.Row="0" FontSize="Large" VerticalOptions="End" HorizontalOptions="Start"/>-->
                    <!--<Label Text="Services Ordered" Grid.Row="0" VerticalOptions="Start" FontSize="Medium"/>-->

                    <ListView RowHeight="40" ItemsSource="{Binding OrderServicesList}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid StyleClass="main">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" FontSize="Subtitle" Text="{Binding}" />
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Picker Title="Where?" Grid.Row="1" VerticalOptions="Start" FontSize="Large"
                    ItemsSource="{Binding AddressList}"
                    ItemDisplayBinding="{Binding AddrLine1}"/>

                    <Label Text="What day?" Grid.Row="2" VerticalOptions="End" FontSize="Large"/>
                    <DatePicker Grid.Row="3" VerticalOptions="Start" FontSize="Large" Date="{Binding SelectedDate}"/>

                    <Label Text="What time?" Grid.Row="4" VerticalOptions="End" FontSize="Large"/>
                    <TimePicker Grid.Row="5" VerticalOptions="Start" FontSize="Large" Time="{Binding SelectedTime}"/>

                    <Picker Title="Who is the service for?" Grid.Row="6" VerticalOptions="Start" FontSize="Large"
                    ItemsSource="{Binding RecipientList}"
                    ItemDisplayBinding="{Binding Value}"
                />

                    <Picker Title="Select your desired Care Partner" Grid.Row="7" VerticalOptions="Start" FontSize="Large"
                    ItemsSource="{Binding CarePartnerList}"
                    ItemDisplayBinding="{Binding Value}"
                />

                    <Button StyleClass="primaryButton" Text="Continue Order" Grid.Row="8" VerticalOptions="Start" Command="{Binding ContinueOrderCommand}"/>


                    <Button StyleClass="contactButton" Text="1-306-EDN-CARE" Grid.Row="9" HorizontalOptions="Center" VerticalOptions="End" />
                </Grid>
            </ScrollView>
        </ContentView>
    </ContentPage.Content>
</ContentPage>
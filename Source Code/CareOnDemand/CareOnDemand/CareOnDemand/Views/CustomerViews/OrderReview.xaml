<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CareOnDemand.Views.CustomerViews.OrderReview">
    <ContentPage.Resources>
        <StyleSheet Source="/Views/StyleSheet.css" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <ContentView>
            <Grid Padding="15" StyleClass="main">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*" />
                    <RowDefinition Height="0.05*" />
                    <RowDefinition Height="0.08*" />
                    <RowDefinition Height="0.08*" />
                    <RowDefinition Height="0.03*" />
                    <RowDefinition Height="0.08*" />
                    <RowDefinition Height="0.03*" />
                    <RowDefinition Height="0.08*" />
                    <RowDefinition Height="0.08*" />
                    <RowDefinition Height="0.08*" />
                    <RowDefinition Height="0.08*" />
                    <RowDefinition Height="0.03*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Label StyleClass="primaryLabel" Text="PLACEHOLDER" Grid.Row="0" FontSize="Large" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />

                <Label Text="Selected Service(s)"  Grid.Row="1" FontSize="Large" VerticalOptions="End" HorizontalOptions="Start"/>
                <Label Text="AUTOFILL FROM PREV PAGE" Grid.Row="2" VerticalOptions="Start" FontSize="Medium"/>

                <Picker Title="Where?" Grid.Row="3" VerticalOptions="Start" FontSize="Large"
                    ItemsSource="{Binding LocationList}"
                    ItemDisplayBinding="{Binding Value}"
                />

                <Label Text="What day?" Grid.Row="4" VerticalOptions="Start" FontSize="Large"/>
                <DatePicker Grid.Row="5" VerticalOptions="Start" FontSize="Large"/>

                <Label Text="What time?" Grid.Row="6" VerticalOptions="Start" FontSize="Large"/>
                <TimePicker Grid.Row="7" VerticalOptions="Start" FontSize="Large"/>

                <Picker Title="Who is the service for?" Grid.Row="8" VerticalOptions="Start" FontSize="Large"
                    ItemsSource="{Binding RecipientList}"
                    ItemDisplayBinding="{Binding Value}"
                />

                <Picker Title="Select your desired Care Partner" Grid.Row="9" VerticalOptions="Start" FontSize="Large"
                    ItemsSource="{Binding CarePartnerList}"
                    ItemDisplayBinding="{Binding Value}"
                />

                <Button StyleClass="primaryButton" Text="Continue Order" Grid.Row="10" VerticalOptions="Start"/>


                <Label StyleClass="contactLabel" Text="1-306-EDN-CARE" Grid.Row="11" HorizontalOptions="Center" VerticalOptions="End" />
            </Grid>
        </ContentView>
    </ContentPage.Content>
</ContentPage>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CareOnDemand.Views.AdminViews.ViewNewOrder"
             NavigationPage.HasNavigationBar="True"
             NavigationPage.HasBackButton="True"
             Title="New Orders Details">
    <ContentPage.Resources>
        <StyleSheet Source="/Views/StyleSheet.css" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <ContentView>
            <ScrollView VerticalScrollBarVisibility="Always">
                <Grid StyleClass="main"> <!-- Page layout Grid-->
                    <Grid.RowDefinitions> <!-- Grid rows-->
                        <RowDefinition Height="Auto" /> <!--Services-->
                        <RowDefinition Height="0.1*" /> <!--Location-->
                        <RowDefinition Height="0.1*" /> <!--Time-->
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="0.1*" /> <!--Recipient-->
                        <RowDefinition Height="0.1*" /> <!--Price-->
                        <RowDefinition Height="0.1*" /> <!--Additional Customer Instructions-->
                        <RowDefinition Height="0.2*" />
                        <RowDefinition Height="0.1*" /> <!--Additional Admin Instructions-->
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="0.1*" /> <!--Buttons-->
                        <RowDefinition Height="0.1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions> <!-- Grid Columns-->
                        <ColumnDefinition Width="0.333*" />
                        <ColumnDefinition Width="0.333*" />
                        <ColumnDefinition Width="0.333*" />
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="ServicesOrdered" MinimumHeightRequest="70" RowHeight="70" VerticalOptions="FillAndExpand" Grid.Row="0" Grid.ColumnSpan="3" ItemsSource="{Binding OrderServicesList}" SelectionMode="None" VerticalScrollBarVisibility="Never">
                        <ListView.ItemTemplate>
                            <!-- List view of orders from Database-->
                            <DataTemplate>
                                <ViewCell>
                                    <Grid StyleClass="main">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.45*"/>
                                            <ColumnDefinition Width="0.03*" />
                                            <ColumnDefinition Width="0.37*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Row="0" Grid.Column="0" FontSize="Subtitle" Text="{Binding ServiceName}" VerticalOptions="Center"/>
                                        <Label Grid.Row="0" Grid.Column="1" FontSize="Subtitle" Text="{Binding RequestedLength}" VerticalOptions="Center"/>
                                        <Label Grid.Row="0" Grid.Column="2" FontSize="Subtitle" Text="hours" VerticalOptions="Center"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                    <Label Text="Location" StyleClass="listPrimaryLabel" Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
                    <Label Text="{Binding Location}"  StyleClass="listSecondryLabel" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" VerticalOptions="Center" />

                    <Label Text="Date" StyleClass="listPrimaryLabel" Grid.Row="2" Grid.Column="0" VerticalOptions="Center"/>
                    <Label Text="{Binding DateString}"  StyleClass="listSecondryLabel" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" VerticalOptions="Center"/>

                    <Label Text="Time" StyleClass="listPrimaryLabel" Grid.Row="3" Grid.Column="0" VerticalOptions="Center"/>
                    <Label Text="{Binding TimeString}"  StyleClass="listSecondryLabel" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" VerticalOptions="Center"/>

                    <Label Text="Recipient" StyleClass="listPrimaryLabel" Grid.Row="4" Grid.Column="0" VerticalOptions="Center"/>
                    <Label Text="{Binding Recipient}"  StyleClass="listSecondryLabel" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" VerticalOptions="Center" />

                    <Label Text="Final Price" StyleClass="listPrimaryLabel" Grid.Row="5" Grid.Column="0" VerticalOptions="Center"/>
                    <Label Text="{Binding FinalPrice}"  StyleClass="listSecondryLabel" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" VerticalOptions="Center"/>

                    <Label Text="Additonal Instructions" StyleClass="listPrimaryLabel" Grid.Row="6" Grid.ColumnSpan="3" VerticalOptions="Center"/>
                    <Label Text="{Binding AdditionalInstructions}"  StyleClass="listSecondaryLabel" FontSize="Medium" Grid.Row="7" Grid.ColumnSpan="3" VerticalOptions="Center"/>
                    <Picker Title="Select Care Partner" VerticalOptions="Center" FontSize="Large" Grid.Row="8" Grid.ColumnSpan="3"
                            ItemsSource="{Binding CarePartnerAccounts}"
                            ItemDisplayBinding="{Binding CarePartnerAccount.FullName}"
                            SelectedItem="{Binding SelectedCarePartner}"/>

                    <Editor Placeholder="Notes to Care Partner" VerticalOptions="Center" Grid.Row="9" Grid.ColumnSpan="3" Text="{Binding CarePartnerNotes}" />

                    <Button StyleClass="secondaryButton" Text="Edit Order" Grid.Row="10" Grid.ColumnSpan="3" />
                    <Button StyleClass="primaryButton" Text="Assign Order" Grid.Row="11" Grid.ColumnSpan="3" Command="{Binding AssignOrderCommand}" />

                </Grid>
            </ScrollView>
        </ContentView>
    </ContentPage.Content>
</ContentPage>